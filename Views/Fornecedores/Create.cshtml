@model FornecedoresApp.Models.Fornecedor

@{
    ViewData["Title"] = "Novo Fornecedor";
}

<h1>Novo Fornecedor</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" inputmode="numeric" maxlength="14" />
                <small class="form-text">Somente números (14 dígitos).</small>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Segmento" class="control-label"></label>
                <select asp-for="Segmento" class="form-select" asp-items="Html.GetEnumSelectList<Segmento>()"></select>
                <span asp-validation-for="Segmento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" id="cep" inputmode="numeric" maxlength="8" />
                <small class="form-text">Somente números (8 dígitos). Ao sair do campo, o endereço será preenchido
                    automaticamente.</small>
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" id="Endereco" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Foto (PNG) - opcional</label>
                <input type="file" name="foto" class="form-control" accept="image/png" />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        async function preencherEnderecoPorCep(cep) {
            cep = (cep || "").replace(/\D/g, "");
            if (cep.length !== 8) return;

            try {
                const resp = await fetch(`https://viacep.com.br/ws/${cep}/json/`);
                const data = await resp.json();
                if (data.erro) return;

                const endereco = `${data.logradouro}, ${data.bairro}, ${data.localidade}-${data.uf}`;
                const inputEndereco = document.getElementById("Endereco");
                if (inputEndereco) inputEndereco.value = endereco.substring(0, 255);
            } catch (_) {
                // opcional: tratar erro de rede
            }
        }

        document.getElementById("cep")?.addEventListener("blur", (e) => {
            preencherEnderecoPorCep(e.target.value);
        });
    </script>
}